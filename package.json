{
  "name": "digicampus",
  "version": "0.1.0",
  "private": true,
  "description": "Digicampus - Next.js + Sanity monorepo",
  "engines": {
    "node": ">=20.19.0"
  },
  "workspaces": [
    "packages/web",
    "packages/studio"
  ],
  "scripts": {
    "dev": "npm --workspace=@digicampus/web run dev",
    "build": "npm --workspace=@digicampus/web run build",
    "start": "npm --workspace=@digicampus/web run start",
    "lint": "npm --workspace=@digicampus/web run lint",
    "validate": "npm --workspace=@digicampus/web run validate",
    "typegen": "npm --workspace=@digicampus/studio run typegen",
    "studio:dev": "npm --workspace=@digicampus/studio run dev",
    "studio:build": "npm --workspace=@digicampus/studio run build",
    "studio:deploy": "npm --workspace=@digicampus/studio run deploy"
  },
  "devDependencies": {
    "typescript": "^5"
  }
}
